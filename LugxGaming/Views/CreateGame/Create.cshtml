@model CreateGameFormModel

@{
    Layout = null;
    ViewData["Title"] = "Create Game";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<body style="background-image:url('/assets/images/create-game.jpg'); background-size:cover">
    <form asp-controller="CreateGame" asp-action="Create" method="post">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div class="mb-md-5 mt-md-4 pb-5">
                                <h2 class="fw-bold mb-2 text-uppercase text-white">Create Game</h2>

                                @if (ViewBag.Created != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        The game was created successfully!
                                    </div>
                                }
                                else if (ViewBag.Exists != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        This game was already created!
                                    </div>
                                }

                                <div class="form-group">
                                    <label asp-for="GameName"></label>
                                    <input asp-for="GameName" type="text" class="form-control" placeholder="Game Name">
                                    <span asp-validation-for="GameName" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="GenreId"></label>
                                    <select asp-for="GenreId" class="form-control">
                                        @foreach (var genre in Model.Genres)
                                        {
                                            <option value="@genre.Id">@genre.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price"></label>
                                    <input asp-for="Price" type="number" min="1" class="form-control" placeholder="Game Price" step=".01">
                                    <span asp-validation-for="Price" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ImageUrl"></label>
                                    <input asp-for="ImageUrl" class="form-control" placeholder="Game Image">
                                    <span asp-validation-for="ImageUrl" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="VideoUrl"></label>
                                    <input asp-for="VideoUrl" class="form-control" placeholder="Game Trailer">
                                    <span asp-validation-for="VideoUrl" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description"></label>
                                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="Game Description"></textarea>
                                    <span asp-validation-for="Description" class="text-warning"></span>
                                    <br />
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary btn-lg px-5" />
                                    <br />
                                    <p class="text-center text-white">Go to the <a asp-controller="Home" asp-action="Index">Home</a> page!</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>